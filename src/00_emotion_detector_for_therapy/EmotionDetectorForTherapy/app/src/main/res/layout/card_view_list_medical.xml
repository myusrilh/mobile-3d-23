<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view = "http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_medical_report"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:layout_margin="5dp"
    android:layout_gravity="center_horizontal"
    card_view:cardBackgroundColor="@color/colorPrimary"
    card_view:cardCornerRadius="25dp"
    card_view:contentPadding="15dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/hari_medical_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sabtu"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_light_italic"/>

            <TextView
                android:id="@+id/tanggal_medical_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_extra_bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/bulan_medical_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sept"
                android:fontFamily="@font/poppins_extra_bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/hasil_medical_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hasil : Sedih"
                android:paddingLeft="8dp"
                android:paddingStart="8dp"
                android:fontFamily="@font/poppins_extra_bold"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_orange_dark"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="4dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:background="@color/colorAccent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saran dari ahli : "
                    android:textSize="10sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/poppins_extra_bold"/>

                <TextView
                    android:id="@+id/deskripsi_saran_ahli_medical_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Marah adalah hal yang manusiawi, sebaik mungkin hindari hal yang memicu kemarahanmu...."
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>







</androidx.cardview.widget.CardView>